{
  "compilerOptions": {
    "types": ["node"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/RoofMaintenance/RoofMaintenance.tsx",
    "components/UI/BeforeAndAfterSlider.tsx",
    "components/RoofConfigurator.jsx",
    "components/UI/CtaButton.tsx",
    "components/Navbar/Navbar.tsx",
    "components/Navbar/NavLinks.tsx",
    "components/Navbar/NavLinksMobile.tsx",
    "components/Footer/Footer.tsx",
    "components/UI/Paragraph.tsx",
    "components/Gallery/Gallery.tsx"
  ],
  "exclude": ["node_modules"]
}
